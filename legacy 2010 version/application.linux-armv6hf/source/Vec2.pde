//uses ints
class Vec2{
  int x;
  int y;
//--------------------------------------------------------------------------------------  
  Vec2(int _x, int _y) {
    x = _x;
    y = _y;
  }
  
  Vec2(Vec2 _v) {
    x = _v.x;
    y = _v.y;
  }
//--------------------------------------------------------------------------------------
  int mag() {
    int xdist = abs(x-0);
    int ydist = abs(y-0);
    return xdist+ydist;
  }
//--------------------------------------------------------------------------------------  
  int dist(Vec2 _v) {
    int xdist = abs(x-_v.x);
    int ydist = abs(y-_v.y);
    return xdist+ydist;
  }
//--------------------------------------------------------------------------------------  
  void add(Vec2 _v) { x += _v.x;  y += _v.y; }   
  void sub(Vec2 _v) { x -= _v.x;  y -= _v.y; }  
  
  void mult (int _n) { x *= _n; y *= _n; }  
  void div (int _n) { x /= _n; y /= _n; }
//--------------------------------------------------------------------------------------
  void norm() {
    div(mag());
  } 
//--------------------------------------------------------------------------------------
  void approach(Vec2 _v){    
    if (x != _v.x) 
      x += (_v.x > x)? 1 : -1;    
    if (y != _v.y)
      y += (_v.y > y)? 1 : -1;
  }
 //--------------------------------------------------------------------------------------
  void snap(int _i) {
    _i-=1;
    x -= x%_i;
    y -= y%_i;
  } 
}
